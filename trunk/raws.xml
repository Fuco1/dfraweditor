<?xml version="1.0" encoding="UTF-8"?>
<raws xsi:noNamespaceSchemaLocation="raws.xsd"
    xmlns=""
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
        
<!--
elements:
c = container, can contain other containers and tokens
t = token, a single directive, contains at least one attribute
a = attribute
e = element of enum
d = description of the container/token/flag/attribute

attributes:
name = the "RAW" name of the RAW
type = type of the attribute (string, int, range, enum)
id   = if true, the attribute is logic id of the object
required = the attribute is required
-->

    <c name="OBJECT:ITEM">
        <d>A top level container for all items</d>
        <c name="ITEM_ARMOR"/>
    </c>

    <c name="ITEM_ARMOR">
        <a type="string" id="ITEM_ARMOR_ID"/>
        
        <t name="ARMORLEVEL"/>
        <t name="COVERAGE"/>
        <t name="LAYER"/>
        <t name="LAYER_SIZE"/>
        <t name="LAYER_PERMIT"/>
        <t name="LBSTEP"/>
        <t name="MATERIAL_SIZE"/>
        <t name="NAME"/>
        <t name="PREPLURAL"/>
        <t name="UBSTEP"/>
        <t name="UPSTEP"/>

        <t name="BARRED"/>
        <t name="HARD"/>
        <t name="LEATHER"/>
        <t name="METAL"/>
        <t name="SCALED"/>
        <t name="SHAPED"/>
        <t name="SOFT"/>
        <t name="STRUCTURAL_ELASTICITY_WOVEN_THREAD"/>
        <t name="STRUCTURAL_ELASTICITY_CHAIN_METAL"/>
    </c>

    <t name="ARMORLEVEL">
        <a type="range" min="0" max="3">
            <d>A range of 0 to 3, specify the strength of the armor</d>
        </a>
    </t>

    <t name="COVERAGE">
        <a type="int"/>
    </t>

    <t name="LAYER">
        <d>This is layer definition token. It defines where the armor is placed</d>
        <a type="enum">
            <d>Possible values for LAYER: armor, over, under</d>
            <e name="ARMOR"/>
            <e name="OVER"/>
            <e name="UNDER"/>
            <e name="COVER"/>
        </a>
    </t>

    <t name="LAYER_SIZE">
        <a type="int"/>
    </t>

    <t name="LAYER_PERMIT">
        <a type="int"/>
    </t>

    <t name="LBSTEP">
        <a type="int"/>
    </t>

    <t name="MATERIAL_SIZE">
        <a type="int"/>
    </t>

    <t name="NAME">
        <a type="string"/>
        <a type="string"/>
    </t>

    <t name="PREPLURAL">
        <a type="string"/>
    </t>

    <t name="UBSTEP">
        <a type="int"/>
    </t>

    <t name="UPSTEP">
        <a type="int"/>
    </t>

    <t name="METAL">
        <d>If present, item can be made out of metal.</d>
    </t>
</raws>